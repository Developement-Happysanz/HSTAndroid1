<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:minHeight="60dp" />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:minHeight="60dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_btn"
            android:fontFamily="@font/helvetica"
            android:gravity="center_vertical|left"
            android:minHeight="60dp"
            android:padding="5dp"
            android:text="@string/rating_title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:id="@+id/rateimg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_rate_review"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/rateimg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="onClickFunc"
            android:numStars="5"
            android:theme="@style/RatingBar"
            android:stepSize="1.0" />

        <TextView
            android:id="@+id/rating_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingBar"
            android:layout_below="@id/ratingBar"
            android:layout_alignRight="@id/ratingBar"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/helvetica"
            android:hint="@string/comment"
            android:minHeight="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp" />

<!--        <ListView-->
<!--            android:layout_width="match_parent"-->
<!--            android:id="@+id/listfedd"-->
<!--            android:layout_below="@id/edtComments"-->
<!--            android:layout_above="@id/btnSubmit"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="10dp"-->
<!--            android:dividerHeight="0dp"/>-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/edtComments"
            android:layout_above="@id/btnSubmit"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listfedd"
                android:orientation="vertical"/>

        </ScrollView>


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/skip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_round_color"
            android:paddingStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/helvetica"
            android:paddingEnd="40dp"
            android:textAllCaps="false"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/skip"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:fontFamily="@font/helvetica"
            android:textColor="@color/blue"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>